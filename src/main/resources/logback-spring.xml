<configuration>

  <!-- Pattern -->
  <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%X{request_id}] [%thread] %-5level %logger{36} - %msg%n"/>

  <!-- Appender 설정 -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- Logger 설정 -->
  <logger name="com.example" level="DEBUG"/>

  <!-- Root Logger 설정 -->
  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
